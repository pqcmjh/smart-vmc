<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="vmc.project.supply.delivery.DeliveryConfirmFragment">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/base_border_top_bottom_shape_gray"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/pick_show_supply_num_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="共 0 种商品需要提货"
            android:textColor="@color/text_color_black_2"
            android:textSize="@dimen/text_size_16" />

    </android.support.percent.PercentRelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/pick_product_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/pick_product_btn_selector"
        android:text="确认提货"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_17" />
</LinearLayout>
