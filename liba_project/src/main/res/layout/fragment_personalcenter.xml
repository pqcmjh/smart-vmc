<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp18"
            android:paddingRight="@dimen/dp18">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="任务记录"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/personalcenter_finish_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="@dimen/dp20" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp18"
            android:paddingRight="@dimen/dp18">

            <TextView
                android:id="@+id/personalcenter_all_task"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="今日需补货10台售货机"
                android:textSize="@dimen/dp16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已完成"
                android:textSize="@dimen/dp16" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/base_black_5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/personalcenter_pickproduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"
            android:padding="@dimen/dp5"
            android:drawableTop="@drawable/icon_pick_product"
            android:drawablePadding="@dimen/dp5"
            android:text="提货历史"
            android:textSize="@dimen/dp12" />
        <View
            android:layout_height="match_parent"
            android:layout_width="0.1dp"
            android:background="@color/base_black_5"/>
        <TextView
            android:id="@+id/personalcenter_supplypickproduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"
            android:padding="@dimen/dp5"
            android:drawableTop="@drawable/icon_supply_product"
            android:drawablePadding="@dimen/dp5"
            android:text="补货历史"
            android:textSize="@dimen/dp12" />
        <View
            android:layout_height="match_parent"
            android:layout_width="0.1dp"
            android:background="@color/base_black_5"/>
        <TextView
            android:id="@+id/personalcenter_returnproduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"
            android:padding="@dimen/dp5"
            android:drawableTop="@drawable/icon_return_product"
            android:drawablePadding="@dimen/dp5"
            android:text="还货历史"
            android:textSize="@dimen/dp12" />
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/base_black_5"/>
    <TextView
        android:id="@+id/personalcenter_checkall"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/white"
        android:text="盘点"
        android:textSize="@dimen/dp20"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/base_black_5"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/base_black_5"/>
    <RelativeLayout
        android:id="@+id/personalcenter_changepassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp12"
        android:paddingRight="@dimen/dp16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="#434343"
            android:textSize="@dimen/dp20"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_edit_pwd"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/base_black_5"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/base_black_5"/>
    <RelativeLayout
        android:id="@+id/personalcenter_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp12"
        android:paddingRight="@dimen/dp16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="#434343"
            android:text="当前版本"
            android:textSize="@dimen/dp20"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_version"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/base_black_5"/>
</LinearLayout>