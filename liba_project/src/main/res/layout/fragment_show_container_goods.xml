<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    tools:context="vmc.project.replenishment.fragment.ShowContainerGoodsDeprecatedFragment">

    <ListView
        android:id="@+id/replenishment_container_goods_listview"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:divider="@color/lightgray"
        android:dividerHeight="@dimen/dp10"
        app:layout_heightPercent="90%" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_heightPercent="10%">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:visibility="gone">

            <Button
                android:id="@+id/replenishment_container_goods_one_key_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/click_button_selector"
                android:text="@string/onekeyfillgoods"
                android:textColor="@color/white"
                android:textSize="@dimen/dp20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/base_border_top_shape_black"
            android:gravity="center"
           >

            <Button
                android:id="@+id/replenishment_container_goods_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/click_button_selector"
                android:enabled="false"
                android:text="@string/fillgoodscomplete"
                android:textColor="@color/white"
                android:textSize="@dimen/dp20" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="补货已经完成"
        android:textColor="@color/base_red_3"
        android:textSize="@dimen/text_size_30"
        android:visibility="gone"
        app:layout_heightPercent="10%" />
</android.support.percent.PercentRelativeLayout>
