<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/product_pick_image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon_login" />

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical|right"
        android:orientation="vertical"
        android:paddingRight="10dp"
        app:layout_widthPercent="50%">

        <TextView
            android:id="@+id/product_pick_name_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="145ml 旺仔牛奶"
            android:textColor="@color/text_color_black_1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_pick_flavor_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="原味"
            android:textColor="@color/text_color_gray_1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <EditText
            android:id="@+id/product_pick_quantity_edit"
            android:layout_width="wrap_content"
            android:background="@null"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/text_color_gray_1"
            android:textSize="18sp" />
    </LinearLayout>

</android.support.percent.PercentRelativeLayout>