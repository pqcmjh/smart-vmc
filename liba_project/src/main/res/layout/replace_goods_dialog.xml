<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="280dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/replenishment_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F88420"
        android:gravity="center"
        android:text="货品已更换"
        android:textColor="#fff"
        android:textSize="@dimen/dp18" />

    <TextView
        android:id="@+id/replenishment_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="@string/replace_goods_warning"
        android:textColor="@color/base_black_5"
        android:textSize="@dimen/dp16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/orange" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/replenishment_dialog_cancel_text"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/orange"
            android:textSize="@dimen/dp18" />

        <TextView
            android:id="@+id/replenishment_dialog_ok_text"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/orange"
            android:textSize="@dimen/dp18" />


    </LinearLayout>

</LinearLayout>