<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/replenishment_goods_replace_LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/white"
    android:textColor="@drawable/supply_textview_red_selector"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:gravity="center_vertical|left">

        <TextView
            android:id="@+id/replenishment_goods_item_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="145ml 旺仔牛奶"
            android:textColor="@drawable/supply_textview_black_selector"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/replenishment_goods_num_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="15"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@drawable/supply_textview_red_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:gravity="center_vertical|left">

        <TextView
            android:id="@+id/replenishment_goods_plan_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="计划补货：12"
            android:textColor="@drawable/supply_textview_gray_selector"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/replenishment_goods_container_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="货道"
            android:textColor="@drawable/supply_textview_gray_selector"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/replenishment_goods_container_line"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@drawable/supply_textview_bg_gray_selector" />

    <LinearLayout
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left">

        <TextView
            android:id="@+id/replenishment_goods_container_actual_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="实际补货"
            android:textColor="@drawable/supply_textview_gray_selector"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/replenishment_goods_item_actual_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|right"
            android:hint="实际数量"
            android:textColor="@drawable/supply_textview_black_selector"
            android:textSize="18sp"
            android:textColorHint="@drawable/supply_textview_gray_selector"
            android:inputType="number"
            android:maxLength="3"
            android:maxLines="1"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>