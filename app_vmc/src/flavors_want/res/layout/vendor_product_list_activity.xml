<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <android.support.percent.PercentRelativeLayout
        android:id="@id/vendor_home_style_bg"
        style="@style/Vendor.Frame">

        <LinearLayout
            android:id="@id/product_list_title"
            android:layout_marginTop="@dimen/dp12"
            android:orientation="horizontal"
            app:layout_heightPercent="9%"
            app:layout_widthPercent="100%">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp33"
                android:src="@drawable/vendor_productlist_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp14"
                android:layout_marginRight="@dimen/dp41"
                android:text="商品列表"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_36" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vendor_header_pics" />


        </LinearLayout>


        <FrameLayout
            android:id="@id/product_list_categroy"
            android:layout_below="@id/product_list_title"
            android:layout_marginTop="10dp"
            app:layout_heightPercent="5.85%"
            app:layout_widthPercent="100%">

        </FrameLayout>

        <FrameLayout
            android:id="@id/product_list_pager"
            android:layout_below="@id/product_list_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            app:layout_heightPercent="7.32%"
            app:layout_widthPercent="100%">
        </FrameLayout>

        <FrameLayout
            android:paddingTop="12dp"
            android:layout_marginBottom="8dp"
            android:id="@id/product_list_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/product_list_categroy"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:layout_heightPercent="75%"

            >

        </FrameLayout>

    </android.support.percent.PercentRelativeLayout>
</layout>