<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>
    <!--
    ~
    ~ 首页布局
    ~
    -->
    <android.support.percent.PercentRelativeLayout
        android:id="@id/vendor_home_style_bg"
        style="@style/Vendor.Frame">

        <!-- 返回按钮-->
        <FrameLayout
            android:id="@id/vendor_back"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            app:layout_heightPercent="10%"
            app:layout_marginLeftPercent="56.5%" />
        <!-- 问题求助 -->
        <FrameLayout
            android:id="@id/vendor_help"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            app:layout_heightPercent="10%"
            app:layout_marginLeftPercent="9.6%" />
        <!-- 购物引导 -->
        <FrameLayout
            android:id="@id/home_shopping_guide"
            app:layout_heightPercent="90%"
            app:layout_widthPercent="100%"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </android.support.percent.PercentRelativeLayout>
</layout>