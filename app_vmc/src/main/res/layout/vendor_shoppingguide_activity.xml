<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <data>

    </data>

    <!--
    ~
    ~ 首页布局
    ~
    -->
    <android.support.percent.PercentRelativeLayout
        style="@style/Vendor"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="0dp">

        <!-- 信息引导 -->
        <FrameLayout
            android:id="@id/home_info"
            android:background="@drawable/vendor_frame_background_bottom"
            app:layout_heightPercent="15.6%"
            app:layout_widthPercent="100%" />

        <!-- 购物引导 -->
        <FrameLayout
            android:id="@id/home_shopping_guide"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/home_info"
            android:layout_marginLeft="@dimen/dp2"
            android:layout_marginRight="@dimen/dp2"
            android:layout_marginTop="10dp"
            android:background="@drawable/vendor_button_bg_white_shap"
            android:padding="@dimen/dp10"
            app:layout_aspectRatio="200%"
            app:layout_heightPercent="71.7%" />

        <!-- 返回按钮-->
        <FrameLayout
            android:id="@id/vendor_back"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/home_info"
            android:layout_toRightOf="@id/home_shopping_guide"
            android:background="@drawable/vendor_frame_background_red"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="16%"/>

    </android.support.percent.PercentRelativeLayout>
</layout>